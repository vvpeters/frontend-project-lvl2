import yaml from 'js-yaml';
import * as path from 'path';

const fileExt = (pathToFile) => path.extname(pathToFile);
const parser = (pathToFile, fileExt) => {
    let parse;
    if (fileExt === '') {
        parse = JSON.parse;
    } else if (fileExt === '.yml') {
        parse = yaml.safeLoad;
    }

return parse;
};

parse(pathToFile);

export default parse;